<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/github_background_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/details_issue_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/white"
        tools:text="Issue Title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/details_issue_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/white"
            tools:text="@string/large_text_bebe" />

    </ScrollView>


</LinearLayout>